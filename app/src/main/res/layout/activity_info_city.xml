<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ig2i.travelPocket.InfoCity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#3A3A3A"
            android:layout_height="200dp"
            android:id="@+id/relativeLayout">

            <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:alpha="0.8"
             />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/retour"
                android:layout_width=" 40dp"
                android:layout_height=" 40dp"
                android:onClick="onClick"
                android:clickable="true"
                android:alpha="0.8"
                fresco:placeholderImage="@drawable/ic_keyboard_arrow_left40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19°"
                android:layout_marginStart="20dp"
                android:textSize="60sp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/currentWeather"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <me.grantland.widget.AutofitTextView
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/temps"
                android:text="Temps"
                android:textStyle="italic"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                android:layout_below="@+id/ville"
                android:layout_alignStart="@+id/ville" />

            <me.grantland.widget.AutofitTextView
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ville"
                android:text="Ville"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:layout_below="@+id/currentWeather"
                android:layout_alignStart="@+id/currentWeather" />

    </RelativeLayout>


    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:background="@drawable/deg_weather_back"
        android:layout_height="120dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout2">


        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="120dp"
             
            android:id="@+id/relativeLayoutToday"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/picToday"
                android:layout_width=" 40dp"
                android:layout_height=" 40dp"
                android:alpha="0.8"
                fresco:placeholderImage="@drawable/wi_clear_day"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />


            <TextView
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tempToday"
                android:text="19°"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                android:layout_below="@+id/picToday"
                android:layout_alignStart="@+id/dayToday" />

            <TextView
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dayToday"
                android:text="Lun"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                android:layout_above="@+id/picToday"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="120dp"
             
            android:id="@+id/relativeLayoutDay1"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/relativeLayoutToday">
    
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/picDay1"
                android:layout_width=" 40dp"
                android:layout_height=" 40dp"
                android:alpha="0.8"
                fresco:placeholderImage="@drawable/wi_hail"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
    
    
            <TextView
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tempDay1"
                android:text="19°"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                android:layout_below="@+id/picDay1"
                android:layout_alignStart="@+id/dayDay1" />
    
            <TextView
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dayDay1"
                android:text="Lun"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                android:layout_above="@+id/picDay1"
                android:layout_centerHorizontal="true" />
    
    
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="120dp"
             
            android:id="@+id/relativeLayoutDay2"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/relativeLayoutDay1">
    
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/picDay2"
                android:layout_width=" 40dp"
                android:layout_height=" 40dp"
                android:alpha="0.8"
                fresco:placeholderImage="@drawable/wi_partly_cloudy_day"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
    
    
            <TextView
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tempDay2"
                android:text="19°"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                android:layout_below="@+id/picDay2"
                android:layout_alignStart="@+id/dayDay2" />
    
            <TextView
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dayDay2"
                android:text="Lun"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                android:layout_above="@+id/picDay2"
                android:layout_centerHorizontal="true" />
    
    
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="120dp"
             
            android:id="@+id/relativeLayoutDay3"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/relativeLayoutDay2">
    
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/picDay3"
                android:layout_width=" 40dp"
                android:layout_height=" 40dp"
                android:alpha="0.8"
                fresco:placeholderImage="@drawable/wi_sleet"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
    
    
            <TextView
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tempDay3"
                android:text="19°"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                android:layout_below="@+id/picDay3"
                android:layout_alignStart="@+id/dayDay3" />
    
            <TextView
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dayDay3"
                android:text="Lun"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                android:layout_above="@+id/picDay3"
                android:layout_centerHorizontal="true" />
    
    
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="120dp"
             
            android:id="@+id/relativeLayoutDay4"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/relativeLayoutDay3">
    
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/picDay4"
                android:layout_width=" 40dp"
                android:layout_height=" 40dp"
                android:alpha="0.8"
                fresco:placeholderImage="@drawable/wi_thunderstorm"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
    
    
            <TextView
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tempDay4"
                android:text="19°"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                android:layout_below="@+id/picDay4"
                android:layout_alignStart="@+id/dayDay4" />
    
            <TextView
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dayDay4"
                android:text="Lun"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                android:layout_above="@+id/picDay4"
                android:layout_centerHorizontal="true" />
    
    
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
