<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:statusBarColor">@color/endGradient</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="MyActionBar" parent="android:Widget.Material.Light.ActionBar">
        <item name="android:background">@drawable/deg_action_bar</item>
        <item name="background">@drawable/deg_action_bar</item>
    </style>

    <style name="NoActionBar" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/endGradient</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

</resources>
